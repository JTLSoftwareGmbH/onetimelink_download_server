{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-extra-parens": "error",
    "curly": "error",
    "eqeqeq": "error",
    "no-alert": "error",
    "yoda": [
      "error",
      "never"
    ],
    "no-multiple-empty-lines": "warn",
    "no-unused-vars": "warn"
  }
}